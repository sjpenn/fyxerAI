# This is an example .env file for Docker development.
# Copy this to .env and fill in your actual secrets.

# Django Configuration
SECRET_KEY=your-django-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration for Docker
# The hostname 'db' refers to the postgres service in docker-compose.yml.
DATABASE_URL=postgres://fyxer:fyxerpass@db:5432/fyxerai

# Redis Configuration for Docker
# The hostname 'redis' refers to the redis service in docker-compose.yml.
REDIS_URL=redis://redis:6379/0

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# AI Configuration
OPENAI_API_KEY=your-openai-api-key

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET_NAME=your-s3-bucket-name
AWS_REGION=us-east-1

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_AUD=authenticated
# Optional override; otherwise derived from SUPABASE_URL
SUPABASE_JWKS_URL=https://your-project.supabase.co/auth/v1/keys

# Gmail Pub/Sub (optional)
GMAIL_PUBSUB_TOPIC=projects/your-gcp-project/topics/your-topic
GMAIL_PUBSUB_LABELS=INBOX

# DJANGO_SETTINGS_MODULE is set in the container environment if needed
# DJANGO_SETTINGS_MODULE=fyxerai_assistant.settings
